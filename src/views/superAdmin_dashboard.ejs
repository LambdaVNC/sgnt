<title>SGNT - Dashboard</title>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-flex align-items-center justify-content-between mb-2">
        <h1 class="h3 mr-3 mb-0 text-gray-800">Dashboard</h1>
        <a href="mailto:bltycxkk@gmail.com" class="d-sm-inline-block btn btn-sm btn-warning shadow-sm"><i
                class="fas fa-hand-point-right fa-sm text-white-100"></i> Sistem ile alakalı hataları bildirin... (Bug
            Report)</a>
    </div>

    <!-- Divider -->
    <hr>

    <!-- Content Row -->
    <div class="row">
        <!-- Activity Name Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Aktif
                                Etkinlik ( <%= act.date %> )
                            </div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                                       <%= act.title %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- All Participants -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Katılımcı Sayısı</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= participantNumber %></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-handshake fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Request Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Bekleyen İstekler</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= requestNumber %></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-fire fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earning -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                <a type="button" data-toggle="collapse" data-target="#kazanc">Kazanç</a>
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                <div class="collapse" id="kazanc">
                                    <div class="card py-0 card-body">
                                        ₺ <%= earning %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i style="font-size: 35px; font-weight: bold; opacity: 0.5;">₺</i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>