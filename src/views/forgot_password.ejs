<title>SGNT - Şifremi Unuttum :(</title>

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <img style="max-height: 90px;" src="/home_page/assets/img/main-logo.png"
                                        onclick="window.location.href='/'" alt="">
                                    <h1 class="h4 text-gray-900 mb-2">Şifreni mi unuttun?</h1>
                                    <p class="mb-4">Şifrenizi unuttunuz mu? Sorun değil! Aşağıya e-posta adresinizi
                                        girin, size şifrenizi sıfırlamak için bir bağlantı gönderelim!</p>
                                </div>
                                
                                <hr>
                            <!-- Validation and Success Messages -->
                            <% if (locals.validation_errors !== undefined || locals.success_messages !== undefined) { %>
                             <%- include('./partials/message.ejs') %>
                            <% } %>

                                <form class="user" action="/forgot-password" method="post">
                                    <div class="form-group">
                                        <input type="email" name="email"
                                            class="form-control form-control-user" id="exampleInputEmail"
                                            aria-describedby="emailHelp" placeholder="Email Addresini Gir...">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Şifremi sıfırla
                                    </button>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="/register">Üye OL!</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="/login">Zaten bir hesabın var mı? Giriş Yap!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>