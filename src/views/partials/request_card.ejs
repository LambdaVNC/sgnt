
<!-- ------- Request Page Card -------  -->
<% reqList.forEach(user=> { %>
    <div class="col mb-4">
        <div class="card h-100 border-left-info">
          <div class="card-body" style="color: black;">
            <h3 class="card-title">
              <%= user.firstName + " " + user.lastName %>
            </h3>
            <p class="card-text">
              <i class="fas fa-phone-alt text-success"></i> <%= user.phone %><br>
              <i class="fas fa-envelope text-primary"></i> <%= user.email %><br>
              <i class="fas fa-calendar-check text-secondary"></i> <%= user.createdAt.toLocaleDateString() %>'den beri Ã¼ye
            </p>
            <div class="d-flex justify-content-around">

                <form action="/super-admin/rejection-request" method="post">
                    <input type="hidden" name="idOfRejectionRequest" value="<%= user._id %>">
                    <button class="btn btn-danger m-2 px-4" type="submit">Red</button>
                </form>

                <form action="/super-admin/accept-request" method="post">
                    <input type="hidden" name="idOfAcceptRequest" value="<%= user._id %>">
                    <button class="btn btn-success m-2 px-4" type="submit">Kabul</button>
                </form>

            </div>
          </div>
        </div>
      </div>
    <% }); %>

   